{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "types": ["vitest/globals", "@testing-library/jest-dom/vitest"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./**/*.ts", "./**/*.tsx"]
}
